{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "enabledManagers": [
    "maven"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "ignoreDeps": [
        "com.h3xstream.findsecbugs:findsecbugs-plugin"
      ]    
    }
  ]
}
