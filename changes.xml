<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/changes/1.0.0"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
  <body>

    <release version="7" date="2015-05-28">
      <action type="update" dev="sseifert">
        Update all build and report plugins to latest versions.
      </action>
      <action type="update" dev="sseifert">
        Update to global-build-tools 5.
      </action>
    </release>

    <release version="6" date="2015-03-09">
      <action type="update" dev="sseifert">
        Update all build and report plugins to latest versions.
      </action>
    </release>

    <release version="5" date="2015-01-30">
      <action type="update" dev="sseifert">
        Update maven-checkstyle-plugin to use Checkstyle 5.9 with JDK 1.8 support.
      </action>
      <action type="update" dev="sseifert">
        Update to global-build-tools 4.
      </action>
    </release>

    <release version="4" date="2014-10-22">
      <action type="update" dev="sseifert" issue="WCMIO-8">
        Do not inherit maven central release configuration to child POMs.
      </action>
      <action system="global-parent" type="update">
        Update misc. maven plugin versions to latest version.
      </action>
      <action type="update" dev="sseifert">
        Update to global-build-tools 3.
      </action>
      <action type="update" dev="sseifert">
        Add buildnumber-maven-plugin to set build number and timestamp variables.
      </action>
    </release>

    <release version="3" date="2014-09-18">
      <action type="update" dev="sseifert">
        Move m2e lifecycle-mapping definition to separate profile to make sure it gets not active when invoking maven outside eclipse.
      </action>
    </release>

    <release version="2" date="2014-09-12">
      <action type="update" dev="sseifert">
        Initial release.
      </action>
    </release>

    <release version="1" date="2014-08-19">
      <action type="add" dev="sseifert">
        Preliminary release.
      </action>
    </release>

  </body>
</document>
